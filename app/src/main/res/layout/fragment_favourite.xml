<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F363F"
    tools:context=".Fragments.FavouriteFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_favourite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2F363F"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/recent_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/ic_recents"
        android:contentDescription="@string/recents_icontxt"
        android:visibility="gone" />

    <TextView
        android:id="@+id/recent_txt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="300dp"
        android:gravity="bottom|center"
        android:text="@string/you_have_no_recent_yettxt"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="gone" />


</FrameLayout>